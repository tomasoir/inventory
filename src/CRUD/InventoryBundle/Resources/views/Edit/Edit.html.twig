{% extends 'CRUDInventoryBundle::layout.html.twig' %}

{% block body %}
    <h1 class="page-title"> Edd Vehicle</h1>
    <div class="editInfo">{{ editInfo }}</div>
    <form action="" method="post" enctype="multipart/form-data">
        <div class="row edit-vehicle">
            <div class="col-xs-12">
              {% if form.vars.value.mainimage is not null %}
                    <img class="edit-image" src="{{ image_url }}" />
              {% endif %}
            </div>
            <div class="col-xs-12">
                <div>
                    <label class="required" for="mainimage">Add image files</label>
                    <input type="file"  name="mainimage" id="mainimage" value="{{image_url}}">
                </div>
            </div>
            <div class="col-xs-12">
                {{ form_row(form.newused) }}
            </div>
            <div class="col-xs-12">
                {{ form_row(form.make) }}
            </div>
            <div class="col-xs-12">
                {{ form_row(form.model) }}
            </div>
            <div class="col-xs-12">
                {{ form_row(form.stock) }}
            </div>
            <div class="col-xs-12">
                {{ form_row(form.trim) }}
            </div>
            <div class="col-xs-12">
                {{ form_row(form.price) }}
            </div>
            <div class="col-xs-12">
                {{ form_row(form.save) }}
            </div>
        </div>
    </form>
{% endblock %}